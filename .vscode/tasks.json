{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build versioned scripts",
      "type": "shell",
      "command": "${workspaceFolder}/tools/ScriptBuilder.ps1",
      "args": [
        "${file}",
        "Current = ${workspaceFolder}/Module/PSCurrent/${fileBasename}",
        "Legacy = ${workspaceFolder}/Module/PSLegacy/${fileBasenameNoExtension}.Legacy.ps1",
        "-SharedPath", "${workspaceFolder}/Module/Shared/${fileBasename}"
      ],
      "windows": {
        "command": "${workspaceFolder}\\tools\\ScriptBuilder.ps1",
        "args": [
          "${file}",
          "Current = ${workspaceFolder}\\Module\\PSCurrent\\${fileBasename}",
          "Legacy = ${workspaceFolder}\\Module\\PSLegacy\\${fileBasenameNoExtension}.Legacy.ps1",
          "-SharedPath", "${workspaceFolder}\\Module\\Shared\\${fileBasename}"
        ]
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build scripts for debugging",
      "type": "shell",
      "command": "${workspaceFolder}/tools/ScriptBuilder.ps1",
      "args": [
        "${file}",
        "Current = ${workspaceFolder}/debug/PSCurrent/${fileBasename}",
        "Legacy = ${workspaceFolder}/debug/PSLegacy/${fileBasenameNoExtension}.Legacy.ps1",
        "-SharedPath", "${workspaceFolder}/debug/Shared/${fileBasename}",
        "-Verbose"
      ],
      "windows": {
        "command": "${workspaceFolder}\\tools\\ScriptBuilder.ps1",
        "args": [
          "${file}",
          "Current = ${workspaceFolder}\\debug\\PSCurrent\\${fileBasename}",
          "Legacy = ${workspaceFolder}\\debug\\PSLegacy\\${fileBasenameNoExtension}.Legacy.ps1",
          "-SharedPath", "${workspaceFolder}\\debug\\Shared\\${fileBasename}",
          "-Verbose"
        ]
      },
      "problemMatcher": []
    },
  ]
}