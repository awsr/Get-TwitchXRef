{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build versioned scripts",
            "type": "shell",
            "command": "${workspaceFolder}/src/CustomBuilder.ps1",
            "args": [
                "-File", "${file}",
                "Current = ${workspaceFolder}/Module/PSCurrent/${fileBasenameNoExtension}.ps1",
                "Legacy = ${workspaceFolder}/Module/PSLegacy/${fileBasenameNoExtension}.Legacy.ps1"
            ],
            "windows": {
                "command": "${workspaceFolder}\\src\\CustomBuilder.ps1",
                "args": [
                    "-File", "${file}",
                    "Current = ${workspaceFolder}\\Module\\PSCurrent\\${fileBasenameNoExtension}.ps1",
                    "Legacy = ${workspaceFolder}\\Module\\PSLegacy\\${fileBasenameNoExtension}.Legacy.ps1"
                ]
            }
        }
    ]
}
